<main class="container container-fluid mt-5">
  <div class="flex-column justify-space-around">
    <div class="container">
      <div class="container-1">
        <div style="margin-top: 20px;" class="jumbotron text-center" id="jumbo-1">
          <h1 class="display-4">One Track <span role="img" aria-label="Memo">&#9856;</span></h1>
          <div class="input">
            <input type="email" class="form-control" id="email" placeholder="Email" aria-label=""
              aria-describedby="basic-addon1">
            <input type="password" class="form-control" id="password" placeholder="Password" aria-label=""
              aria-describedby="basic-addon1">
            <a class="btn btn-primary btn-lg mt-4" href="/" role="button" id="log-in">Log In</a>
            <a class="btn btn-primary btn-lg mt-4" href="/login" role="button" id="sign-up">Sign Up</a>
          </div>
        </div>
      </div>
      <div class="container-2">
        <div style="margin-top: 20px;" class="jumbotron text-center" id="jumbo-2">
          <h1 class="display-4">Search <span role="img" aria-label="Memo">&#9782;</span></h1>
          <form id="search-form" class="form">
            <select id="format-input" class="form-input">
              <option value="" disabled selected>Select an option</option>
              <option value="Songs">Song</option>
              <option value="Artist">Artist</option>
              <option value="Genre">Genre</option>
            </select>
            <input id="search-input" class="form-input w-100" type="text" placeholder="Royals, Beck, R&B">
            <button class="btn btn-info btn-block" id="submit-search">Submit</button>
          </form>
        </div>
      </div>
      <div class="container-3">
        <div style="margin-top: 20px;" class="jumbotron text-center" id="jumbo-3">
          <h1 class="display-4">Trends <span role="img" aria-label="Memo">&#10064;</span></h1>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="footer-home">
  <p class="copyrights">One Track @ 2021 <span class="footer-api">3P API: Spotify</span></p>
</footer>