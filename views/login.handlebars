<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="avatar">
        <p>Select Avatar</p>
        <label>
          <input type="radio" name="avatar1" value="1">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ2csVHl_EBoGPADSH-4tF2g6NFnhWKDp72MA&usqp=CAU" width="300" height="300" alt="Avatar" class="avatar">
        </label>
        <label>
          <input type="radio" name="avatar1" value="2">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFvJrJW5XuQ3q0M0azDbXEO3pv0-AM9w3Qhw&usqp=CAU" alt="Avatar" class="avatar">
        </label>
        <label>
          <input type="radio" name="avatar1" value="3">
          <img src="https://i.pinimg.com/736x/2e/76/d8/2e76d88411e7c159e114984b36627b4e.jpg" alt="Avatar" class="avatar">
        </label>
        <label>
          <input type="radio" name="avatar1" value="4">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR7YhP4HnefYhoFHR4AZ-QXvstSMgjniE8LYw&usqp=CAU" alt="Avatar" class="avatar">
        </label>
        <label>
          <input type="radio" name="avatar1" value="5">
          <img src="https://numpaint.com/wp-content/uploads/2020/08/Meliodas-Seven-Deadly-Sins.jpg" alt="Avatar" class="avatar">
        </label>
        
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

